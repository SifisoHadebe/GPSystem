@model IEnumerable<GPSystem.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (Model.Count() != 0)
{
    foreach (var item in Model)
    {
            <div class="preview">
                <h3>
                    @item.Topic
                </h3>
                <p>Date : @item.Date</p>
                @Html.ActionLink("Read", "Details", new { id = item.Id }, new { @class="btn btn-sm btn-primary", @style="padding-left: 20px; padding-right: 20px;"})
            </div>           
    }
}
else
{
    <p>This is cool</p>
}


