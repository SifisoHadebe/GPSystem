@model IEnumerable<GPSystem.Models.Event>

@{
    ViewBag.Title = "Index";
}
<div class="col-md-8">
    <h3>Events</h3>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <a href="@Url.Action("Details",new { id = item.Id })">
                    <div class="alert alert-info">
                        <h4>@item.Name</h4>
                        <p style="font-size: 10px;">@item.EventDate.Date.Day</p>
                    </div>
                </a>
            }
        }
    
</div>



        