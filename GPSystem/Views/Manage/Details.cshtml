@model GPSystem.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
}


<div class="col-md-8 col-md-offset-2">
    <input type="file" class="hidden" />
    <img src="~/imgRepo/user.png" class="img-circle img-responsive center-block" style="width: 200px; margin-bottom: 20px;" />
    
    <div class="jumbotron">
        <legend class="text-center">Profile</legend>
        <table class="table table-responsive col-md-offset-3">
            <tr>
                <th class="col-md-4">Name</th>
                <td>@Html.DisplayFor(model => model.Name)</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>@Html.DisplayFor(model => model.Surname)</td>
            </tr>
            <tr>
                <th>UserName</th>
                <td>@Html.DisplayFor(model => model.Email)</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>@Html.DisplayFor(model => model.Gender)</td>
            </tr>
            <tr>
                <th>Date Of Birth</th>
                <td>@Html.DisplayFor(model => model.DateOfBirth)</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>@ViewBag.Age </td>
            </tr>
            <tr>
                <th>My Church</th>
                <td>@ViewBag.Church</td>
            </tr>

            <tr>
                <th>Phone Number</th>
                <td>
                    N/A @if (Model.PhoneNumber != null)
                    { <p>wwww</p>}
                </td>
            </tr>
        </table>
        <p class="text-center">
            <a href="#" class="btn btn-sm btn-default">Edit Profile <span class="glyphicon glyphicon-pencil" style="padding-left: 10px;"></span></a>
        </p>
    </div>
</div>